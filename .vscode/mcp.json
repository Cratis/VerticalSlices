{
    "servers": {
        "vertical-slices": {
            "type": "stdio",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/Source/VerticalSlices.csproj",
            ]
        },
        "VerticalSlicesDocker": {
            "type": "stdio",
            "command": "docker",
            "args": [
                "run",
                "-i",
                "--rm",
                "cratis/vertical-slices-mcp:latest"
            ]
        }
    }
}
